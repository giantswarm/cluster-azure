{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "azure": {
            "type": "object",
            "properties": {
                "location": {
                    "type": "string"
                }
            }
        },
        "clusterDescription": {
            "type": "string"
        },
        "clusterName": {
            "type": "string"
        },
        "controlPlane": {
            "type": "object",
            "properties": {
                "etcdVolumeSizeGB": {
                    "type": "integer"
                },
                "instanceType": {
                    "type": "string"
                },
                "replicas": {
                    "type": "integer"
                },
                "rootVolumeSizeGB": {
                    "type": "integer"
                }
            }
        },
        "kubernetesVersion": {
            "type": "string"
        },
        "machinePools": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "availabilityZones": {
                        "type": "string"
                    },
                    "customNodeLabels": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "customNodeTaints": {
                        "type": "array"
                    },
                    "instanceType": {
                        "type": "string"
                    },
                    "maxSize": {
                        "type": "integer"
                    },
                    "minSize": {
                        "type": "integer"
                    },
                    "name": {
                        "type": "string"
                    },
                    "rootVolumeSizeGB": {
                        "type": "integer"
                    }
                }
            }
        },
        "network": {
            "type": "object",
            "properties": {
                "podCIDR": {
                    "type": "string"
                },
                "serviceCIDR": {
                    "type": "string"
                }
            }
        },
        "oidc": {
            "type": "object",
            "properties": {
                "caPem": {
                    "type": "string"
                },
                "clientId": {
                    "type": "string"
                },
                "groupsClaim": {
                    "type": "string"
                },
                "issuerUrl": {
                    "type": "string"
                },
                "usernameClaim": {
                    "type": "string"
                }
            }
        },
        "organization": {
            "type": "string"
        },
        "sshSSOPublicKey": {
            "type": "string"
        }
    }
}
