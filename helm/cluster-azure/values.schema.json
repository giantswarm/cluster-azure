{
    "$schema": "http://json-schema.org/schema#",
    "description": "Configuration of an Azure cluster using Cluster API",
    "properties": {
        "attachCapzControllerIdentity": {
            "title": "Attach controller identity",
            "type": "boolean"
        },
        "azure": {
            "properties": {
                "azureClusterIdentity": {
                    "description": "AzureClusterIdentity resource to use for this cluster.",
                    "properties": {
                        "name": {
                            "title": "Name",
                            "type": "string"
                        },
                        "namespace": {
                            "title": "Namespace",
                            "type": "string"
                        },
                        "title": "Identity",
                        "type": "object"
                    },
                    "type": "object"
                },
                "location": {
                    "title": "Location",
                    "type": "string"
                },
                "subscriptionId": {
                    "title": "Subscription ID",
                    "type": "string"
                },
                "title": "Azure settings",
                "type": "object"
            },
            "type": "object"
        },
        "clusterDescription": {
            "description": "User-friendly description of the cluster's purpose.",
            "title": "Cluster description",
            "type": "string"
        },
        "clusterName": {
            "description": "Unique identifier, cannot be changed after creation.",
            "title": "Cluster name",
            "type": "string"
        },
        "controlPlane": {
            "properties": {
                "etcdVolumeSizeGB": {
                    "title": "Etcd volume size (GB)",
                    "type": "integer"
                },
                "instanceType": {
                    "title": "Node VM size",
                    "type": "string"
                },
                "replicas": {
                    "title": "Number of nodes",
                    "type": "integer"
                },
                "rootVolumeSizeGB": {
                    "title": "Root volume size (GB)",
                    "type": "integer"
                },
                "title": "Control plane settings",
                "type": "object"
            },
            "type": "object"
        },
        "defaults": {
            "properties": {
                "evictionMinimumReclaim": {
                    "title": "Default settings for eviction minimum reclaim",
                    "type": "string"
                },
                "hardEvictionThresholds": {
                    "title": "Default settings for hard eviction thresholds",
                    "type": "string"
                },
                "softEvictionGracePeriod": {
                    "title": "Default settings for soft eviction grace period",
                    "type": "string"
                },
                "softEvictionThresholds": {
                    "title": "Default settings for soft eviction thresholds",
                    "type": "string"
                }
            },
            "type": "object"
        },
        "enablePerClusterIdentity": {
            "title": "Enable identity per cluster",
            "type": "boolean"
        },
        "includeClusterResourceSet": {
            "type": "boolean"
        },
        "kubernetesVersion": {
            "title": "Kubernetes version",
            "type": "string"
        },
        "machineDeployments": {
            "items": {
                "properties": {
                    "customNodeLabels": {
                        "items": {
                            "title": "Label",
                            "type": "string"
                        },
                        "title": "Custom node labels",
                        "type": "array"
                    },
                    "customNodeTaints": {
                        "descriptions": "Taints that will be set on all nodes in the node pool, to avoid the scheduling of certain workloads.",
                        "items": {
                            "properties": {
                                "effect": {
                                    "enum": [
                                        "NoSchedule",
                                        "PreferNoSchedule",
                                        "NoExecute"
                                    ],
                                    "title": "Effect",
                                    "type": "string"
                                },
                                "key": {
                                    "title": "Key",
                                    "type": "string"
                                },
                                "value": {
                                    "title": "Value",
                                    "type": "string"
                                }
                            },
                            "required": [
                                "effect",
                                "key",
                                "value"
                            ],
                            "title": "Node taint",
                            "type": "object"
                        },
                        "title": "Custom node taints",
                        "type": "array"
                    },
                    "disableHealthCheck": {
                        "title": "Disable HealthChecks for the MachineDeployment",
                        "type": "boolean"
                    },
                    "instanceType": {
                        "title": "VM size",
                        "type": "string"
                    },
                    "name": {
                        "description": "Unique identifier, cannot be changed after creation.",
                        "title": "Name",
                        "type": "string"
                    },
                    "replicas": {
                        "title": "Number of nodes in the MachineDeployment",
                        "type": "integer"
                    },
                    "rootVolumeSizeGB": {
                        "title": "Root volume size (GB)",
                        "type": "integer"
                    },
                    "title": "Node pool",
                    "type": "object"
                },
                "type": "object"
            },
            "title": "Node pools",
            "type": "array"
        },
        "machinePools": {
            "type": "array"
        },
        "network": {
            "properties": {
                "hostCIDR": {
                    "title": "Host CIDR",
                    "type": "string"
                },
                "podCIDR": {
                    "title": "Pod CIDR",
                    "type": "string"
                },
                "serviceCIDR": {
                    "title": "Service CIDR",
                    "type": "string"
                },
                "type": "object"
            },
            "title": "Network settings",
            "type": "object"
        },
        "oidc": {
            "properties": {
                "caPem": {
                    "description": "Identity provider's CA certificate in PEM format.",
                    "title": "Certificate authority",
                    "type": "string"
                },
                "clientId": {
                    "title": "Client ID",
                    "type": "string"
                },
                "groupsClaim": {
                    "title": "Groups claim",
                    "type": "string"
                },
                "issuerUrl": {
                    "title": "Issuer URL",
                    "type": "string"
                },
                "type": "object",
                "usernameClaim": {
                    "title": "Username claim",
                    "type": "string"
                }
            },
            "title": "OIDC settings",
            "type": "object"
        },
        "organization": {
            "title": "Organization",
            "type": "string"
        },
        "sshSSOPublicKey": {
            "title": "SSH Public key for SSO",
            "type": "string"
        }
    },
    "title": "Cluster configuration",
    "type": "object"
}
